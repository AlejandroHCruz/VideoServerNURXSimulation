PRINCIPAL {

	NUMERO_SISTEMA = 0
	TIEMPO = 0
	NUM_EVENTOS = 0
	MAX_EVENTOS = valor
	LAMBDA = valor de lambda
	A = valor de a
	FLUJO_LLEGADAS = 0
	FLUJO_PROCESADOR = 0
	TIEMPO_PROCESADOR = 0
	LONGITUD = 0
	TIEMPO_INICIO = 0
	TIEMPO_ANTERIOR = 0

	GENERAR_LLEGADA
	REPETIR

	{
		SACAR SIGUIENTE EVENTO
		Si es llegada, entonces
			{ PROCESAR_LLEGADA }
			si no
			{ PROCESAR_SERVICIO }
		NUM_EVENTOS = NUM_EVENTOS + 1
	}

	HASTA QUE NUM_EVENTOS > MAX_EXVENTOS
	LONGITUD = LONGITUD / TIEMPO
	UTILIZACION = TIEMPO_PROCESADOR / TIEMPO
	FLUJO_LLEGADAS = FLUJO_LLEGADAS / TIEMPO
	FLUJO_PROCESADOR = FLUJO_PROCESADOR / TIEMPO
}

GENERAR_LLEGADA {
	x = número aleatorio
	TIEMPO_EVENTO = TIEMPO - ln(x) / lambda
	Añadirlo a la lista (ordenada)
}

GENERAR_SERVICIO {
	x = número aleatorio
	TIEMPO_EVENTO = TIEMPO - ln(x) / a
	Añadirlo a la lista (ordenada)
	TIEMPO_INICIO = TIEMPO	
}

PROCESAR_LLEGADA {

	TIEMPO = TIEMPO_EVENTO
	INTERVALO = TIEMPO - TIEMPO_ANTERIOR
	TIEMPO_ANTERIOR = TIEMPO
	LONGITUD = LONGITUD + NUMERO_SISTEMA * INTERVALO
	NUMERO_SISTEMA = NUMERO_SISTEMA + 1
	FLUJO_LLEGADAS = FLUJO_LLEGADAS + 1
	GENERAR_LLEGADA
	Si NUMERO_SISTEMA = 1 entonces
		{ GENERAR_SERVICIO }
}

PROCESAR_SERVICIO {

	TIEMPO = TIEMPO_EVENTO
	INTERVALO = TIEMPO - TIEMPO_ANTERIOR
	TIEMPO_ANTERIOR = TIEMPO
	LONGITUD = LONGITUD + NUMERO_SISTEMA * INTERVALO
	INT_PROC = TIEMPO - TIEMPO_INICIO
	TIEMPO_PROCESADOR = TIEMPO_PROCESADOR + INT_PROC
	FLUJO_PROCESADOR = FLUJO_PROCESADOR + 1
	NUMERO_SISTEMA = NUMERO_SISTEMA - 1
	Si NUMERO_SISTEMA > 0 entonces
		{ GENERAR_SERVICIO }
	}	